{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OscWardrobe",
  "version": "0.1.0",
  "identifier": "jp.0xd.osc-wardrobe.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "overwrite-all-lua"
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "osc-wardrobe",
        "width": 800,
        "height": 600
      },
      {
        "title": "log (lua)",
        "width": 800,
        "height": 600,
        "label": "log-lua",
        "url": "console.html?target=lua",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "called_D",
    "resources": [
      "resources/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
